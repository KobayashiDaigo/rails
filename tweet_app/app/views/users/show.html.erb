<% provide(:title, "#{@user.name}さんのプロフィール") %>
<%= render 'layouts/flash_messages' %>
<div id="microposts">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <!--何人フォローしてるか、フォローされているかを表示-->
      <section class="stats">
      <%= render 'shared/stats' %>
      </section>
    </aside>
  </div>
  <div class="col-md-8">
      <!--フォローする、フォローを外すボタンを表示-->
      <%= render 'follow_form' if logged_in? %>
      
      <!--つぶやいていたら以下を表示-->
      <% if @user.microposts.any? %>
        <h3>つぶやき(<%= @user.microposts.count %>)</h3>
        
        <!--つぶやきの一覧-->
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>