<li id="coment-<%= coment.id %>">
  <%= link_to gravatar_for(coment.user, size: 50), coment.user %>
  <span class="user"><%= link_to coment.user.name, coment.user %></span>
  <span class="content"><%= coment.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
</li>